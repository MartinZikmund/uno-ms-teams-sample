<Page
    x:Class="UnoApp23.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoApp23"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="20">
        <Image
            Width="120"
            Height="120"
            HorizontalAlignment="Center"
            Source="ms-appx:///UnoApp23/Assets/logo.png" />
        <TextBlock
            HorizontalAlignment="Center"
            AutomationProperties.AutomationId="HelloTextBlock"
            FontSize="30"
            Text="Hello from Uno Platform in Microsoft Teams!" />
        <Button
            HorizontalAlignment="Center"
            Click="Button_Click"
            FontSize="30">
            Add
        </Button>
        <TextBlock
            x:Name="TbCounter"
            HorizontalAlignment="Center"
            FontSize="30"
            Text="0" />
    </StackPanel>
</Page>
